<% @posts.each do |post| %>
  <div class="col-xl-11 col-lg-11 col-md-12">
    <div class="card-wrap">
      <div class="card">
        <div class="card-header align-items-center d-flex">
          <%= link_to user_path(post.user), class: "no-text-decoration" do %>
            <%= image_tag post.user.profile_photo_url, class: "post-profile-icon" %>
          <% end %>
          <%= link_to user_path(post.user), class: "black-color no-text-decoration", title: post.user.name do %>
            <strong><%= post.user.name %></strong>
          <% end %>
          <% if post.user_id == current_user.id %>
            <%= link_to edit_post_path(post), method: :get, class: "edit-post-icon-outline ml-auto mx-0 my-auto", id:"edit-post-icon" do %>
              <div class="edit-post-icon"></div>
            <% end %>            
            <%= link_to post_path(post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "delete-post-icon-outline ml-auto mx-0 my-auto", id: "delete-post-icon" do %>
              <div class="delete-post-icon"></div>
            <% end %>
          <% end %>
        </div>
        <%= link_to(post_path(post)) do %>
          <%= image_tag post.photos.first.image.url, class: "post-image" if post.photos.present? %>
        <% end %>
        <div class="card-body">
          <%= link_to(post_path(post)) do %>
            <span><%= post.map&.address %></span>
          <% end %>
          <div class="mr-2"><span><%= post.caption %></span></div>
          <div id="comment-post-<%= post.id.to_s %>"><%= render 'comment_list', { post: post } %></div>
          <div class="parts">
            <div id="like-icon-post-<%= post.id.to_s %>">   
              <% if post.liked_by(current_user).present? %>
                <%= link_to "いいねを取り消す", post_like_path(post.id, post.liked_by(current_user)), method: :DELETE, remote: true, class: "loved hide-text", id: "loved-hide-text" %>
              <% else %>
                <%= link_to "いいね", post_likes_path(post), method: :POST, remote: true, class: "love hide-text", id: "love-hide-text" %>
              <% end %>
            </div>
            <div id="like-text-post-<%= post.id.to_s %>"><%= post.likes.count %></div>
              <%= link_to time_ago_in_words(post.created_at).upcase + "前", post_path(post), class: "post-time no-text-decoration" %>
          </div>
          <hr>
          <div class="row actions" id="comment-form-post-<%= post.id.to_s %>">
            <%= form_with model: [post, Comment.new], class: "w-100", local: false do |f| %>
              <%= f.hidden_field :user_id, value: current_user.id %>
              <%= f.hidden_field :post_id, value: post.id %>
              <%= f.text_field :comment, class: "form-control comment-input border-0", placeholder: "コメント ...", autocomplete: :off %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
